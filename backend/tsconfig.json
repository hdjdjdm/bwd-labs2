{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@constants/*": ["constants/*"],
            "@controllers/*": ["controllers/*"],
            "@middleware/*": ["middleware/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src"
    }
}
